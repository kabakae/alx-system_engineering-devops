#!/usr/bin/env bash
# Stop Nginx service
service nginx stop

# Change Nginx user in the configuration
sed -i 's/^user\s\+.*$/user nginx;/' /etc/nginx/nginx.conf

# Change Nginx listening port in the default site configuration
sed -i 's/listen\s\+80;/listen 8080;/' /etc/nginx/sites-available/default

# Start Nginx service
service nginx start

# Check if Nginx is running and listening on port 8080
if pgrep -x "nginx" > /dev/null && nc -z 0 8080 > /dev/null; then
    exit 0
else
    echo "Nginx failed to start or is not listening on port 8080."
    echo "Checking Nginx error logs for more information..."
    tail -n 10 /var/log/nginx/error.log
    exit 1
fi
